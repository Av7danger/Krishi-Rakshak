# Database Configuration
DATABASE_URL=postgresql://krishirakshak:password@localhost:5432/krishirakshak
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://10.0.2.2:8000"]
CORS_ALLOW_CREDENTIALS=true

# Storage Configuration
STORAGE_TYPE=filesystem  # filesystem or minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=krishirakshak
MINIO_SECURE=false

# Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# AI/ML Configuration
LLM_MODE=MOCK  # MOCK, OPENAI, LOCAL
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

STT_MODE=MOCK  # MOCK, OPENAI, WHISPER_LOCAL, GOOGLE
OPENAI_WHISPER_MODEL=whisper-1

TTS_MODE=MOCK  # MOCK, GTTS, OPENAI, LOCAL
TTS_LANGUAGE=en

# Voice Agent Configuration
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret

WHATSAPP_ENABLED=false
WHATSAPP_ACCOUNT_SID=your-twilio-account-sid
WHATSAPP_AUTH_TOKEN=your-twilio-auth-token
WHATSAPP_PHONE_NUMBER=whatsapp:+1234567890

# WebSocket Configuration
WEBSOCKET_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Development Configuration
DEBUG=true
ENVIRONMENT=development

# Privacy & Consent
DEFAULT_CONSENT_FOR_TRAINING=false
DATA_RETENTION_DAYS=365

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8001

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false  # Set to true for synchronous execution in dev

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true

# File Processing
IMAGE_PROCESSING_TIMEOUT=300  # seconds
AUDIO_PROCESSING_TIMEOUT=600  # seconds

# Model Configuration
MODEL_VERSION=v1.0.0
MODEL_CONFIDENCE_THRESHOLD=0.5
MODEL_BATCH_SIZE=1

# Health Check
HEALTH_CHECK_INTERVAL=30  # seconds
