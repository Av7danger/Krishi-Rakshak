# Core
APP_ENV=development
API_PREFIX=/api/v1
SECRET_KEY=changeme
ACCESS_TOKEN_EXPIRE_MINUTES=60
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=krishi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/krishi

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Storage
USE_MINIO=false
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=uploads
LOCAL_UPLOAD_DIR=uploads

# Integrations toggles
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

WHATSAPP_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# ML/AI toggles
LLM_MODE=MOCK  # MOCK|OPENAI|LOCAL
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.2

STT_MODE=MOCK  # MOCK|OPENAI|WHISPER_LOCAL
TTS_ENABLED=false

# Rate limiting
UPLOAD_RATE_PER_MIN=10

# Websocket
WS_ENABLED=true

WEBHOOK_RATE_PER_MIN=30

MAX_UPLOAD_MB=5
ALLOWED_IMAGE_MIME=image/jpeg,image/png

TWILIO_VALIDATE_SIGNATURE=false
